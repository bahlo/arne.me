---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Rating from '../components/Rating.astro';
import { SITE_TITLE } from '../consts';

type Props = CollectionEntry<'books'>['data'];

const { title, subtitle, author, dateRead, rating, cover, website } = Astro.props;

---

<html lang="en">
  <head>
    <BaseHead title={`${title} by ${author}`} description={`My review and rating of ${title} by ${author}.`}} image={cover}/>
    <style>
      .cover {
        width: 32%;
        float: right;
        margin-left: 1%;
      }

      .clear {
        clear: both;
      }

      h1 {
        margin-bottom: 0;
      }

      .subtitle {
        display: block;
        margin-bottom: 12px;
        font-size: 1.2rem;
      }
    </style>
  </head>
  <body>
    <Header/>
    <main>
      <article>
        <img class="cover" src={cover} alt={`Cover of ${title} by ${author}`} />
        <h1>{title}{subtitle && ": " + subtitle}</h1>
        <span class="subtitle">{author}</span>
        Read on <FormattedDate date={dateRead}/><br>
        <Rating rating={rating}/><br>
        {website && <a href={website}>Website</a>}
        <slot />
        <br class="clear"/>
      </article>
    </main>
    <Footer/>
  </body>
</html>
