---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { SITE_TITLE } from "../consts";

type Props = CollectionEntry<"writing">["data"];

const { title, description, pubDate, updatedDate, readingTime } = Astro.props;
const { slug } = Astro.params;
---

<html lang="en" class="writing">
  <head>
    <BaseHead
      title={`${title} â€” ${SITE_TITLE}`}
      description={description}
      image={`/writing/${slug}/og-image.png`}
    />
  </head>
  <body>
    <Header />
    <main id="main">
      <article class="stack">
        <h1 class="title">{title}</h1>
        <span class="meta"><FormattedDate date={pubDate} /> &middot; {readingTime}</span>
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
