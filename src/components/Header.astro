---
import HeaderLink from './HeaderLink.astro';
---

<style>
  .warning {
    background: #fff6c7;
    padding: 8px;
    width: 100%;
    display: block;
    margin: 16px 0;
    border: 1px solid #f7dc50;
    border-radius: 4px;
  }

  nav {
    display: flex;
    align-items: center;
    margin: 16px 0;
  }

  nav a {
    display: inline-block;
    margin-right: 12px;
  }

  nav a.active {
    font-weight: bold;
  }
</style>

<header>
  <span class="warning">This website is being redesigned in the open</span>
  <nav>
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/work">Work</HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
    <HeaderLink href="/weekly">Weekly</HeaderLink>
    <HeaderLink href="/books">Books</HeaderLink>
  </nav>
</header>
