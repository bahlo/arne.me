---
import HeaderLink from './HeaderLink.astro';
import Maintenance from './Maintenance.astro';
---

<style>
  nav {
    display: flex;
    align-items: center;
    margin: 16px 0;
  }

  nav a {
    display: inline-block;
    margin-right: 12px;
  }

  nav .home {
    color: var(--color-text);
    font-weight: bold;
    text-decoration: none;
  }

  nav a:not(.home).active {
    font-weight: bold;
    border-bottom-color: var(--color-text);
  }
</style>

<header>
  <Maintenance />
  <nav>
    <HeaderLink href="/" class="home">Arne Bahlo</HeaderLink>
    <HeaderLink href="/work">Work</HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
    <HeaderLink href="/weekly">Weekly</HeaderLink>
    <HeaderLink href="/books">Books</HeaderLink>
  </nav>
</header>
