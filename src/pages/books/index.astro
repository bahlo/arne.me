---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { BOOKS_TITLE, BOOKS_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const books = (await getCollection('books')).sort(
  (a, b) => b.data.dateRead.valueOf() - a.data.dateRead.valueOf()
).reduce((acc, book) => {
  const year = book.data.dateRead.getFullYear();
  if (acc[year]) {
    acc[year].push(book);
  } else {
    acc[year] = [book];
  }
  return acc;
}, {});
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={BOOKS_TITLE} description={BOOKS_DESCRIPTION} />
  </head>
  <body>
    <Header />
      <main id="main">
        <section>
          <h1>Books</h1>
          <p>All the books I've read since March 2023:</p>
          {Object.keys(books).sort((a, b) => b - a).map(year => (
            <h3>{year}</h3>
            <ul>
            {books[year].map(book => (
              <li>
                <FormattedDate date={book.data.dateRead} />
                <a href={`/books/${book.slug}/`}>{book.data.title}</a>
                by {book.data.author}
              </li>
            ))}
            </ul>
          ))}
        </section>
      </main>
      <Footer />
	</body>
</html>
