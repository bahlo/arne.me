---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION, INDEX_TITLE, INDEX_HERO } from "../consts";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} image="/og-image.png" />
    <style>
      h1 {
        font-size: var(--font-size-largest);
      }

      .hero {
        font-size: var(--font-size-large);
        font-family: var(--font-serif);
        line-height: 1.3;
      }

      .contact {
        list-style: none;
        padding: 0;
        font-weight: 500;
      }

      .contact li {
        margin-right: var(--space-1);
        padding: var(--space-2) 0;
        display: inline-block;
      }

      .contact a {
        background: var(--color-button);
        color: var(--color-primary);
        padding: var(--space-1) var(--space-2);
        border-radius: 8px;
        text-decoration: none;
        transition: background 0.2s ease-out;
        border: 1px solid var(--color-button-border);
      }

      .contact a svg {
        width: 1em;
        height: 1em;
        display: inline-block;
        position: relative;
        top: 0.1em;
      }

      .contact svg path {
        fill: var(--color-primary);
      }

      .contact a:hover {
        background: var(--color-button-hover);
      }
    </style>
  </head>
  <body>
    <Header />
    <main id="main">
      <section class="stack">
        <div class="stack-small">
          <h1>{INDEX_TITLE}</h1>
          <p class="hero">{INDEX_HERO}</p>
        </div>
        <p>
          Having worked with a variety of technologies and stacks, from frontend
          to backend to databases, I know my way around building accessible and
          safe applications and tools.
        </p>
        <p>
          In my free time I like to play with my kids, work on side projects, take
          walks and read books.
        </p>
        <ul class="contact">
